<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="PatternView">
        <!-- This is the maximum size the view will take in wrap_content mode. -->
        <attr name="maxSize" format="dimension" />
        <!-- The color of the circle. -->
        <attr name="circleColor" format="color" />
        <!-- The color of the dot. -->
        <attr name="dotColor" format="color" />
        <!-- Number of rows and columns in the matrix. -->
        <attr name="gridSize" format="integer" />
        <!-- The color of the path between the cells. -->
        <attr name="pathColor" format="color" />
    </declare-styleable>

    <declare-styleable name="PinButton">
        <attr name="setNumber" format="string" />
        <attr name="setText" format="string" />
        <attr name="setCentral" format="boolean" />
    </declare-styleable>

    <declare-styleable name="SwitchButton" />
</resources>